<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentMain">

    <fragment
        android:id="@+id/fragmentMain"
        android:name="com.example.hpv3.fragmentMain"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_fragmentMain_to_fragmentSettings"
            app:destination="@id/fragmentSettings" />
        <action
            android:id="@+id/action_fragmentMain_to_fragmentRoutePlot"
            app:destination="@id/fragmentRoutePlot" />
        <action
            android:id="@+id/action_fragmentMain_to_fragmentRouteList"
            app:destination="@id/fragmentRouteList" />
    </fragment>
    <fragment
        android:id="@+id/fragmentSettings"
        android:name="com.example.hpv3.fragmentSettings"
        android:label="fragmentSettings" />
    <fragment
        android:id="@+id/fragmentRoutePlot"
        android:name="com.example.hpv3.fragmentRoutePlot"
        android:label="fragment_route_plot"
        tools:layout="@layout/fragment_route_plot" />
    <fragment
        android:id="@+id/fragmentRouteList"
        android:name="com.example.hpv3.fragmentRouteList"
        android:label="fragment_route_list"
        tools:layout="@layout/fragment_route_list" />
</navigation>